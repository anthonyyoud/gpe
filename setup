#----------------------------------------------------------------------------

#!/bin/sh
# Compile and setup ready to run in a separate directory
# usage:  source setup <directory name> [compile params]

mkdir $1

#Compile
make clean
make

#Setup dir
if [ $? == 0 ]; then
  mv gpe $1
  cp parameters.f90 $1
  cp run_script.sh $1
  cp transfer.sh $1
  cp ulimit_hack.sh $1
  cd $1
fi
